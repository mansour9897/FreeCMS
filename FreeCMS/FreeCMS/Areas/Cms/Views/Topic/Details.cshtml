@model FreeCMS.DomainModels.Cms.Topic
@{
    ViewData["Title"] = "دسته";
    Layout = "~/Areas/CMS/Views/Shared/_AdminLayout.cshtml";
    string AreaName = "CMS";
}
<div>
    <ol class="breadcrumb webo-breadcrumb" style="background-color:#fff;">
        <li>
            <a href="@Url.Action("Index", "Admin", new { area=AreaName})">وبلاگ</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Topic", new { area=AreaName})"> مدیریت دسته ها</a>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ol>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-push-8 col-lg-push-8">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">دسترسی ها</h3>
            </div>
            <div class="box-body">
                <p>تاریخ ایجاد: @Model.CreationDate</p>
                <p>آخرین ویرایش: @Model.LastModified</p>
                <p>والد: @(Model.Parent != null ? Model.Parent.Name : "-") </p>
                @Html.ActionLink("فهرست", "Index", "Topic", new {  }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("ویرایش", "Edit", "Topic", new {  Id = Model.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("حذف", "Delete", "Topic", new {  Id = Model.Id }, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>    <!-- ./functions -->
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-md-pull-4 col-lg-pull-4">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewData["Title"]</h3>
            </div><!--  ./box-header -->
            <div class="box-body">
                <h3>@Model.Name</h3>
                <br>
                @Model.Description
            </div><!-- ./box-body -->
        </div><!-- ./box -->
    </div><!-- ./info -->
</div><!-- ./row -->