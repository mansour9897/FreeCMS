@model List<FreeCMS.DomainModels.Cms.Topic>
<style>
    .caret-up{
        border-top: none;
        border-bottom: 4px dashed;
    }
</style>
<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
            <span>دسته ها</span>
            <a class="pull-left collapsed" role="button" data-toggle="collapse" data-parent="#menu-item-select-list" href="#cms-topics-select-list" aria-expanded="false" aria-controls="collapseOne1">
                <span class="caret"></span>
            </a>
        </h4>
    </div>
    <div id="cms-topics-select-list" class="panel-collapse menu-item-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body webo-select-list-box" id="cms-topics-select-list-wrapper">
            @if(Model != null && Model.Count > 0)
            {
                <div>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#cms-last-topics" aria-controls="cms-last-topics" role="tab" data-toggle="tab">تازه ترین ها</a></li>
                        <li role="presentation"><a href="#cms-all-topics" aria-controls="cms-all-topics" role="tab" data-toggle="tab">همه</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="cms-last-topics">
                            @foreach (var topic in Model.Take(5))
                            {
                                <div>
                                    <input id="@topic.Id" type="checkbox" class="webo-menu-item-checkbox " data-text="@topic.Name" data-link="@Url.Action("Category","Home",new{area="CMS",id=topic.Id})" data-header="دسته" data-link-is-enabled="false" >        
                                    <label>@topic.Name</label>
                                </div>
                            }
                        </div>
                        <div role="tabpanel" class="tab-pane" id="cms-all-topics">
                            @foreach (var topic in Model)
                            {
                                <div>
                                    <input id="@topic.Id" type="checkbox" class="webo-menu-item-checkbox " data-text="@topic.Name" data-link="@Url.Action("Category","Home",new {area="CMS",id=topic.Id})" data-header="دسته" data-link-is-enabled="false" >        
                                    <label>@topic.Name</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }else
            {
                <h4>دسته ای وجود ندارد.</h4>
            }
        </div>
        <div class="panel-footer text-left">
            <button type="button" class="btn-add-menu-item btn btn-info" data-items-wrapper-id="#cms-topics-select-list" >افزودن</button>
        </div>
    </div>
</div>