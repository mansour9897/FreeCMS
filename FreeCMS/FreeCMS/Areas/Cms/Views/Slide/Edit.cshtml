@model FreeCMS.Areas.Cms.ViewModels.Slide.EditableSlide
@{
    ViewData["Title"] = "ویرایش اسلاید";
    Layout = "~/Areas/CMS/Views/Shared/_AdminLayout.cshtml";
    string AreaName = "CMS";
}
<div>
    <ol class="breadcrumb webo-breadcrumb" style="background-color:#fff;">
        <li>
            <a href="@Url.Action("Index", "Admin", new { area=AreaName})">پلیمر ما</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Slide", new { area=AreaName})">مدیریت اسلایدها</a>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ol>
</div>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreationDate)
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-push-8 col-lg-push-8">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">ذخیره اطلاعات</h3>
                </div>
                <div class="box-body">
                    <p>اطلاعات خود را ذخیره نمایید.</p>
                    @Html.ActionLink("انصراف", "Index", "Slide", new { area = AreaName }, new { @class = "btn btn-default"}) |
                    <input type="submit" value="ذخیره" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-md-pull-4 col-lg-pull-4">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">@ViewData["Title"]</h3>
                </div><!-- ./box-header -->
                <div class="box-body">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Text)
                        @Html.TextBoxFor(model => model.Text, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Text)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Link)
                        @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Link)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ShowPriority)
                        @Html.TextBoxFor(model => model.ShowPriority, new { @class = "form-control",@type="number",@min="0" })
                        <small class="form-text text-muted">این عدد ترتیب نمایش اسلاید ها را مشخص می کند.</small>
                        <br>
                        @Html.ValidationMessageFor(model => model.ShowPriority)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Image)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Image, new { @class = "form-control" })
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default image-upload" onclick="BrowseServer('Image');">
                                    <span class="fas fa-ellipsis-h"></span>
                                </button>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.Image)
                    </div>
                </div><!-- ./box-body -->
            </div><!-- ./box -->
        </div>
    }
</div><!-- ./row -->