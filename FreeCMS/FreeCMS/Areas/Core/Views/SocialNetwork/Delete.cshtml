@model FreeCMS.DomainModels.System.SocialNetwork
@{
    ViewData["Title"] = "حذف شبکه اجتماعی";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<div>
    <ol class="breadcrumb webo-breadcrumb" style="background-color:#fff;">
        <li>
            <a href="@Url.Action("Index", "Admin", new { area="Core"})">پیشخوان مدیریت</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "SocialNetwork", new { area="Core"})">مدیریت شبکه های اجتماعی</a>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ol>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-push-8 col-lg-push-8">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">دسترسی ها</h3>
            </div>
            <div class="box-body">
                <p>تاریخ ایجاد: @Model.CreationDate</p>
                <p>آیا از حذف این شبکه مطمئن هستید؟</p>
                @using (Html.BeginForm())
                {
                    <text>
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => Model.Id)
                        @Html.ActionLink("انصراف", "Index", "SocialNetwork", new { area = "Core" }, new { @class = "btn btn-default" }) |
                        <input type="submit" value="حذف" class="btn btn-danger" />
                    </text>
                }
            </div>
        </div>
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">وضعیت ها</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    @Html.DisplayFor(model => model.Display, new { @class = "form-control webo-vertical-resize" })
                    @Html.Label("نمایش")
                </div>
                <div class="form-group">
                    @Html.DisplayFor(model => model.IsShareable, new { @class = "form-control webo-vertical-resize" })
                    @Html.Label("قابلیت اشتراک گذاری")
                </div>
            </div>
        </div>
    </div>    <!-- ./functions -->
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-md-pull-4 col-lg-pull-4">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewData["Title"]</h3>
            </div><!--  ./box-header -->
            <div class="box-body">
                <div class="media">
                    <div class="media-right">
                        <a href="#">
                        <img class="media-object webo-user-image-page" src="@Model.Image" >
                        </a>
                    </div>
                    <div class="media-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">@Model.Name</h4>
                            </li>
                            <li class="list-group-item">آدرس اینترنتی: @Model.Address</li>
                            <li class="list-group-item">آدرس اشتراک گذاری: @Model.ShareAddress</li>
                        </ul>
                    </div>
                </div>
            </div><!-- ./box-body -->
        </div><!-- ./box -->
    </div><!-- ./info -->
</div><!-- ./row -->