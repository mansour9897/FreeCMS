@model Webo.Core.Areas.Core.ViewModels.Role.RoleDetailsVm
@{
    ViewData["Title"] = "نقش";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <ol class="breadcrumb webo-breadcrumb" style="background-color:#fff;">
        <li>
            <a href="@Url.Action("Index", "Admin", new { area="Core"})">پیشخوان مدیریت</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Role", new { area="Core"})">مدیریت نقش</a>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ol>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-push-8 col-lg-push-8">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">دسترسی ها</h3>
            </div>
            <div class="box-body">
                @Html.ActionLink("فهرست", "Index", "Role", new { area = "Core" }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("ویرایش", "Edit", "Role", new { area = "Core", Id = Model.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("حذف", "Delete", "Role", new { area = "Core", Id = Model.Id }, new { @class = "btn btn-danger" })
            </div>
        </div>
        <div class="box box-solid ">
            <div class="box-header with-border">
                <h3 class="box-title">مجوزها</h3>
                <div class="box-tools pull-left">
                    <button class="btn btn-box-tool" data-widget="collapse">
                        <span class="fa fa-minus"></span>
                    </button>
                </div>
            </div>
            <div class="box-body ">
                @Html.Partial("_RolePermissionsList", Model)
            </div>
        </div><!-- ./box-permissions-->
        <div class="box box-solid collapsed-box">
            <div class="box-header with-border">
                <h3 class="box-title">کاربران</h3>
                <div class="box-tools pull-left">
                    <button class="btn btn-box-tool" data-widget="collapse">
                        <span class="fa fa-plus"></span>
                    </button>
                </div>
            </div>
            <div class="box-body ">
                @Html.Partial("_RoleUsersList", Model)
            </div>
        </div><!-- ./box-users-->
    </div>    <!-- ./functions -->
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-md-pull-4 col-lg-pull-4">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">نقش</h3>
            </div><!--  ./box-header -->
            <div class="box-body">
                <dl>
                    <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>
                    <dt>@Html.DisplayNameFor(model => model.IsAdmin)</dt>
                    <dd>@Html.DisplayFor(model => model.IsAdmin)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd>@Html.DisplayFor(model => model.Description)</dd>
                </dl>
            </div><!-- ./box-body -->
        </div><!-- ./box -->
        
        
    </div><!-- ./info -->
</div><!-- ./row -->