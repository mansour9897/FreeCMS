@model FreeCMS.ViewModels.Profile.ChangePasswordVm
@{
    ViewData["Title"] = "تغییر رمز";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<div class="row">
    @using(Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-push-8 col-lg-push-8">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">ذخیره اطلاعات</h3>
                </div>
                <div class="box-body">
                    <p>اطلاعات خود را ذخیره نمایید.</p>
                    @Html.ActionLink("انصراف", "Index", "Profile", new { area = "" }, new { @class = "btn btn-default"}) |
                    <input type="submit" value="ذخیره" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-md-pull-4 col-lg-pull-4">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">@ViewData["Title"]</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CurrentPassword)
                        @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CurrentPassword)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword)
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                        <small  class="form-text text-muted">رمز شما باید ترکیبی از a-z، A-Z و حداقل یک کاراکتر غیرالفبایی (!#$) باشد.</small>
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmNewPassword)
                        @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>