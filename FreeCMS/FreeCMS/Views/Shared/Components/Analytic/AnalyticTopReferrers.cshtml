@model IList<string>
<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">برترین ارجاع دهنده ها</h3>
    </div><!-- ./box-header -->
    <div class="box-body">
        @if(Model != null && Model.Count > 0)
        {
            <div class="responsive-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ارجاع دهنده</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var referrer in Model)
                        {
                            <tr>
                                <td>@referrer</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- ./responsive-table -->
        }
        else
        {
            <div class="tex-center">
                <h4>ارجاع دهنده ای وجود ندارد.</h4>
            </div>
        }
        
    </div><!-- ./box-bosy -->
</div><!-- ./box -->
